<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/btEasy"
        android:layout_gravity="center_horizontal"
        android:text="@string/btEasyLabel"
        android:onClick="StartGameClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btNormalLabel"
        android:id="@id/btNormal"
        android:layout_gravity="center_horizontal"
        android:onClick="StartGameClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btExpertLabel"
        android:id="@+id/btExpert"
        android:layout_gravity="center_horizontal"
        android:onClick="StartGameClick" />
</LinearLayout><!-- From: file:/C:/Users/Frédéric/Google%20Drive%20XCedim/R&amp;D/Android/SudokuExperimentProject/SudokuExperiment/src/main/res/layout/level_selection.xml -->